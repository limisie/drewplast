---
import { getRelativeLocaleUrl } from "astro:i18n";
import { defaultLocale } from "@i18n/ui";
import { getDynamicImageData } from "@lib/imageImport";
import "@styles/reset.css";
import "@styles/variables.css";
import "@styles/base.css";

const { seo } = Astro.props;
const locale = Astro.currentLocale || defaultLocale;

const imageData =
  seo.metaImage && (await getDynamicImageData(seo.metaImage, locale));
const currentUrl = getRelativeLocaleUrl(locale, seo.slug);
---

<head>
  <meta charset="utf-8" />
  <link
    rel="apple-touch-icon"
    sizes="57x57"
    type="image/png"
    href="/apple-touch-icon.png"
  />
  <link rel="icon" href="/favicon.ico" sizes="any" />
  <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
  <link
    rel="mask-icon"
    href=`${Astro.url.origin}${currentUrl}/favicon.svg`
    color="#000000"
  />

  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=DM+Sans:opsz,wght@9..40,100..1000&family=Poppins:wght@200;300;400&display=swap"
    rel="stylesheet"
  />

  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />

  <title>{seo.metaTitle}</title>
  <meta name="description" content={seo.metaDescription} />
  {seo.preventIndexing && <meta name="robots" content="noindex" />}

  <meta property="og:site_name" content="Drewplast" />
  <meta property="og:url" content=`${Astro.url.origin}${currentUrl}` />
  <meta property="og:title" content={seo.metaTitle} />
  <meta property="og:description" content={seo.metaDescription} />
  <meta property="og:locale" content={locale} />
  <meta property="og:type" content="website" />
  {imageData && <meta property="og:image" content={imageData.import()} />}
</head>
