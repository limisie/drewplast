---
import Card from "@components/Card.astro";
import HorizontalScroll from "./HorizontalScroll.astro";
import { getLocalizedDataByEntries } from "@lib/data";

const { productsList } = Astro.props;

const productsData = await getLocalizedDataByEntries(
  productsList,
  Astro.currentLocale
);
---

<HorizontalScroll class="snap-start">
  {
    productsData.map((product) => (
      <Card
        title={product.title}
        image={product.image}
        url={product.seo.slug}
      />
    ))
  }
</HorizontalScroll>
