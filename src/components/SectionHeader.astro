---
const { title, eyebrow, description } = Astro.props;
---

<article>
  <div id="title">
    {eyebrow && <p class="eyebrow">{eyebrow}</p>}
    <h1>{title}</h1>
  </div>

  {
    description && (
      <div id="description">
        <p>{description}</p>
      </div>
    )
  }

  <div id="content" class="flow-content">
    <slot />
  </div>
</article>

<style>
  article {
    display: grid;
    row-gap: var(--spacer-responsive);
  }

  #content {
    grid-column: 1 / -1;
    --flow-spacer: var(--spacer-responsive);

    figure:first-child {
      margin-top: var(--spacer-responsive);
    }
  }

  @media (min-width: 60rem) {
    article {
      grid-template-columns: 1fr 1fr;
      column-gap: var(--spacer);
      align-items: end;
    }
  }
</style>
