---
import SectionHero from "@components/SectionHero.astro";
import SectionGeneric from "@components/SectionGeneric.astro";
import FeaturesList from "@components/FeaturesList.astro";
import ImageBanner from "@components/ImageBanner.astro";
import ProductsCardList from "@components/ProductsCardList.astro";

const {
  data: {
    sectionHero,
    sectionDescription,
    sectionProducts,
    sectionSustainable,
    sectionDistributors,
    image,
  },
} = Astro.props;
---

<SectionHero data={sectionHero} />

<SectionGeneric
  class={{
    section: "full-width light",
    content: "content--description",
  }}
  title={sectionDescription.title}
  description={sectionDescription.description}
>
  <FeaturesList featuresList={sectionDescription.featuresList} />
</SectionGeneric>

<SectionGeneric
  class={{
    section: "breakout--right",
    content: "content--list",
  }}
  title={sectionProducts.title}
  description={sectionProducts.description}
  pageLink={sectionProducts.pageLink}
  >
  <ProductsCardList />
</SectionGeneric>

<SectionGeneric
class={{
  section: "full-width dark",
  content: "breakout--left content--background",
}}
  title={sectionSustainable.title}
  description={sectionSustainable.description}
  backgroundImage={sectionSustainable.image}
  pageLink={sectionSustainable.pageLink}
/>

<SectionGeneric
  class={{
    content: "content--link",
  }}
  title={sectionDistributors.title}
  description={sectionDistributors.description}
  pageLink={sectionDistributors.pageLink}
/>

<ImageBanner image={image} />
