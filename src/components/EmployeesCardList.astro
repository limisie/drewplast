---
import { getLocalizedDataByEntries } from "@lib/data";
import { defaultLocale } from "@i18n/ui";
import Card from "@components/Card.astro";
import HorizontalScroll from "@components/HorizontalScroll.astro";

const { employeesList } = Astro.props;

const locale = Astro.currentLocale || defaultLocale;
const employeesData = await getLocalizedDataByEntries(employeesList, locale);
---

<HorizontalScroll>
  {
    employeesData.map((employee) => (
      <Card
        title={employee.name}
        description={employee.position}
        image={employee.image}
      />
    ))
  }
</HorizontalScroll>
