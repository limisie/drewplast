---
import ProductsListItem from "@components/ProductsListItem.astro";
import { getLocalizedDataByEntries } from "@lib/data";

const { productsList } = Astro.props;

const productsData = await getLocalizedDataByEntries(
  productsList,
  Astro.currentLocale
);
---

<ul>
  {productsData.map((product) => <ProductsListItem product={product} />)}
</ul>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: var(--spacer-responsive);
  }
</style>
